/* pages/category/index.wxss */
page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates .container .left-menu {
  flex: 2;
}
.cates .container .left-menu .menu-item {
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
}
.cates .container .left-menu .active {
  color: var(--themeColor);
  border-left: 2px solid currentColor;
}
.cates .container .right-content {
  flex: 5;
}
.cates .container .right-content .goods {
  text-align: center;
  margin-bottom: 30rpx;
}
.cates .container .right-content .goods .goods-title {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
.cates .container .right-content .goods .goods-title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .container .right-content .goods .goods-list {
  display: flex;
  flex-wrap: wrap;
}
.cates .container .right-content .goods .goods-list navigator {
  width: 33.33%;
  margin-bottom: 25rpx;
}
.cates .container .right-content .goods .goods-list navigator image {
  width: 50%;
}
